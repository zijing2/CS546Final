<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">  
    <title>PetPar Admin Dashboard - Manage Users</title>
    <meta name="description" content="">
    <meta name="author" content="templatemo">
    <!-- 
    Visual Admin Template
    http://www.templatemo.com/preview/templatemo_455_visual_admin
    -->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,400italic,700' rel='stylesheet' type='text/css'>
      <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
      <link rel="stylesheet" href="http://cdn.bootcss.com/bootstrap/3.3.0/css/bootstrap.min.css">
      <link href="/public/css/templatemo-style.css" rel="stylesheet">
      <link href="http://cdn.bootcss.com/font-awesome/4.7.0/css/font-awesome.css" rel="stylesheet">

    
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

  </head>
  <body>  
    <!-- Left column -->
    <div class="templatemo-flex-row">
      <div class="templatemo-sidebar">
        <header class="templatemo-site-header">
          <div class="square"></div>
          <h1>PetPar Admin</h1>
        </header>
        <div class="profile-photo-container">
          <img src="/public/img/maius.jpeg" alt="Profile Photo" class="img-responsive">  
          <div class="profile-photo-overlay"></div>
        </div>      
        <!-- Search box -->
       
        <div class="mobile-menu-icon">
            <i class="fa fa-bars"></i>
          </div>
        <nav class="templatemo-left-nav">          
          <ul>
            <li><a href="/admin/user" {{#if is_users}}class="active"{{/if}}><i class="fa fa-users fa-fw"></i>Users</a></li>
            <li><a href="/admin/order" {{#if is_order}}class="active"{{/if}}><i class="fa fa-sliders fa-fw"></i>Order</a></li>
            <li><a href="/admin/pet" {{#if is_pet}}class="active"{{/if}}><i class="fa fa-github fa-fw"></i>Pet</a></li>
            <li><a href="/admin/product" {{#if is_product}}class="active"{{/if}}><i class="fa fa-database fa-fw"></i>Product</a></li>
            <li><a href="/admin/logout" ><i class="fa fa-eject fa-fw"></i>Sign Out</a></li>
          </ul>  
        </nav>
      </div>
      <!-- Main content --> 
      <div class="templatemo-content col-1 light-gray-bg">
        <div class="templatemo-top-nav-container">
          <div class="row">
            <nav class="templatemo-top-nav col-lg-12 col-md-12">
              <ul class="text-uppercase">
                <li><a href="" class="active">Admin panel</a></li>
              </ul>  
            </nav> 
          </div>
        </div>
        <div class="templatemo-content-container">
          <div class="templatemo-content-widget no-padding">
            <div class="panel panel-default table-responsive">
              {{#if is_user}}
              <table class="table table-striped table-bordered templatemo-user-table">
                <thead>
                    
                  <tr>
                    <td><a href="" class="white-text templatemo-sort-by"># <span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">UserName <span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">Gender <span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">Date Of Birth <span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">Address <span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">Phone <span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">Email <span class="caret"></span></a></td>
                    <td>Edit</td>
                    <td>Delete</td>
                  </tr>
                 
                </thead>
                <tbody>
                    {{#each users}}
                  <tr>
                    <td>{{_id}}</td>
                    <td>{{profile.name}}</td>
                    <td>{{profile.gender}}</td>
                    <td>{{profile.birthday}}</td>
                    <td>{{profile.address}}</td>
                    <td>{{profile.phone}}</td>
                    <td>{{profile.email}}</td>
                    <td><a href="" class="templatemo-edit-btn">Edit</a></td>
                    <td><a href="" class="templatemo-link">Delete</a></td>
                  </tr>
                   {{/each}}
                </tbody>
              </table>  
              {{/if}}  
              {{#if is_order}}
               <table class="table table-striped table-bordered templatemo-user-table">
                <thead>
                    
                  <tr>
                    <td><a href="" class="white-text templatemo-sort-by">order_id<span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">user_id <span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">package <span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">price <span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">address <span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">Phone <span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">order time <span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">product_theme <span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">product_gift <span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">product_cake <span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">product_album <span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">img <span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">place time <span class="caret"></span></a></td>
                    <td>Edit</td>
                    <td>Delete</td>
                  </tr>
                 
                </thead>
                <tbody>
                    {{#each orders}}
                  <tr>
                    <td>{{_id}}</td>
                    <td>{{uid}}</td>
                    <td>{{order_package}}</td>
                    <td>{{order_price}}</td>
                    <td>{{order_address}}</td>
                    <td>{{order_phone}}</td>
                    <td>{{order_time}}</td>
                    <td>{{order_product_theme}}</td>
                    <td>{{order_product_gift}}</td>
                    <td>{{order_product_cake}}</td>
                    <td>{{order_product_album}}</td>
                    <td>{{order_img}}</td>
                    <td>{{place_time}}</td>
                    <td><a href="" class="templatemo-edit-btn">Edit</a></td>
                    <td><a href="" class="templatemo-link">Delete</a></td>
                  </tr>
                   {{/each}}
                </tbody>
              </table>  
              {{/if}}
              {{#if is_pet}}
               <table class="table table-striped table-bordered templatemo-user-table">
                <thead>
                    
                  <tr>
                    <td><a href="" class="white-text templatemo-sort-by">pet_id<span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">owner_id<span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">name <span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">gender <span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">birthday <span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">breed <span class="caret"></span></a></td>
                    <td><a href="" class="white-text templatemo-sort-by">hobbies<span class="caret"></span></a></td>
                    <td>Edit</td>
                    <td>Delete</td>
                  </tr>
                 
                </thead>
                <tbody>
                    {{#each pets}}
                  <tr>
                    <td>{{_id}}</td>
                    <td>{{owner_id}}</td>
                    <td>{{name}}</td>
                    <td>{{gender}}</td>
                    <td>{{birthday}}</td>
                    <td>{{breed}}</td>
                    <td>{{hobbies}}</td>
                    <td><a href="" class="templatemo-edit-btn">Edit</a></td>
                    <td><a href="" class="templatemo-link">Delete</a></td>
                  </tr>
                   {{/each}}
                </tbody>
              </table>  
              {{/if}}
            </div>                          
          </div>          
          
          {{!--<div class="pagination-wrap">
            <ul class="pagination">
              <li><a href="#">1</a></li>
              <li><a href="#">2</a></li>
              <li class="active"><a href="#">3 <span class="sr-only">(current)</span></a></li>
              <li><a href="#">4</a></li>
              <li><a href="#">5</a></li>
