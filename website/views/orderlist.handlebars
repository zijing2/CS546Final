<link href="/public/css/thumbnail-gallery.css" rel="stylesheet">

<div class="container" >
      <div class="row clearfix">
        <div class="col-xs-12 column">
          
     {{> (lookup . 'partial_topnav') }}


      <div class="row" style="margin-top:30px">

            <div class="col-lg-12">
                <h1 class="page-header">Order List</h1>
            </div>

            {{#each orders}}
            <div class="col-lg-3 col-md-4 col-xs-6 thumb">
              <div class="thumbnail" style="height:320px">
                <a  href="/order/{{_id}}">
                    <img class="img-responsive img-size" src="{{order_img}}" alt="">
                </a>
                <dl class="dl-horizontal">
                  <dt>OrderId:</dt>
                  <dd>{{_id}}</dd>
                  <dt>pet:</dt>
                  <dd>{{pet.name}}</dd>
                  <dt>Time:</dt>
                  <dd>{{order_time}}</dd>
                </dl>
              </div>
            </div>
            {{/each}}

            
        </div>
      
      </div>